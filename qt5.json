{
  "name": "qt5",
  "modules":
  [
    {
      "name": "qt5-qtbase",
      "cleanup": [
        "/bin",
        "/doc",
        "/include",
        "/lib/*.a",
        "/lib/*.la",
        "/lib/*.prl",
        "/lib/cmake",
        "/lib/debug",
        "/lib/mkspecs",
        "/lib/pkgconfig"
      ],
      "config-opts": [
        "-confirm-license",
        "-opensource",
        "-debug",
        "-shared",
        "-platform",
        "linux-g++",
        "-optimized-qmake",
        "-nomake",
        "examples",
        "-nomake",
        "tests",
        "-system-harfbuzz",
        "-system-sqlite",
        "-accessibility",
        "-dbus-linked",
        "-fontconfig",
        "-glib",
        "-icu",
        "-openssl-linked",
        "-no-pch",
        "-no-rpath",
        "-no-separate-debug-info",
        "-no-directfb",
        "-no-linuxfb",
        "-no-kms",
        "-no-cups",
        "-system-proxies",
        "-archdatadir",
        "/app/lib/"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.qt.io/official_releases/qt/5.9/5.9.5/submodules/qtbase-opensource-src-5.9.5.tar.xz",
          "sha256": "7d3ef666d2efcf260a5a0780a1ccd49f897e839e1d9932225be4859ec26730d4"
        },
        {
          "type": "shell",
          "commands": [
            "mv configure configure.qt"
          ]
        },
        {
          "type": "script",
          "commands": [
            "processed=`sed -e 's/--/-/g ; s/=/ /g' <<< $@`",
            "./configure.qt $processed"
          ],
          "dest-filename": "configure"
        },
        {
          "type": "patch",
          "path": "qtbase-hidpi_scale_at_192.patch"
        }
      ]
    },
    {
      "name": "qt5-qtsvg",
      "sources": [
        {
          "type": "archive",
          "url": "http://download.qt.io/official_releases/qt/5.9/5.9.5/submodules/qtsvg-opensource-src-5.9.5.tar.xz",
          "sha256": "62222e435cee458c67c810832aae68b90a11285e486473fe2675cd6ed4f4e3c2"
        },
        {
          "type": "script",
          "commands": [
            "qmake"
          ],
          "dest-filename": "configure"
        }
      ]
    },
    {
      "name": "qt5-qtx11extras",
      "sources": [
        {
          "type": "archive",
          "url": "http://download.qt.io/official_releases/qt/5.9/5.9.5/submodules/qtx11extras-opensource-src-5.9.5.tar.xz",
          "sha256": "2be254e7e94be38b1847eccf63f1dcf2298fb6391b145235db74dcf81d026008"
        },
        {
          "type": "script",
          "commands": [
            "qmake"
          ],
          "dest-filename": "configure"
        }
      ]
    },
    {
      "name": "qt5-qtwayland",
      "sources": [
        {
          "type": "archive",
          "url": "https://download.qt.io/official_releases/qt/5.9/5.9.5/submodules/qtwayland-opensource-src-5.9.5.tar.xz",
          "sha256": "c4224196f2866230a4a177a6fc74c494e4db8624de1ca4d568371521f294e247"
        },
        {
          "type": "script",
          "commands": [
            "qmake"
          ],
          "dest-filename": "configure"
        }
      ]
    },
    {
      "name": "gsettings-desktop-schemas",
      "config-opts": [ "--disable-introspection" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/gsettings-desktop-schemas/3.24/gsettings-desktop-schemas-3.24.0.tar.xz",
          "sha256": "f6573a3f661d22ff8a001cc2421d8647717f1c0e697e342d03c6102f29bbbb90"
        }
      ]
    },
    {
      "name": "qgnomeplatform",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/MartinBriza/QGnomePlatform/archive/0.3/QGnomePlatform-0.3.tar.gz",
          "sha256": "6335f86d8a3e7b2dedd356868dcc20e0d81736f88ee1364e7c19b6f5a20c9c0c"
        },
        {
          "type": "script",
          "commands": [
            "qmake"
          ],
          "dest-filename": "configure"
        }
      ]
    },
    {
      "name": "adwaita-qt",
      "buildsystem": "cmake",
      "sources": [
        {
